<div class="container">
  <h1>Survey: <%=@survey.title%></h1>
  <form method='post' action='/survey/<%= @survey.id %>'>
  <ul>
  <%@question.each do |question|%>
    <li><%= question.prompt %>
      <br> 
      <input class="choices" type="radio" name="choice_id" value=<%= @choice[0].id %>> <%= @choice[0].option %>
      <input type="hidden" name="question_id" value=<%=question.id%>><br></li>
    <%end%> 
  </ul>
  
  <button>Submit Answers</button>
</form>
</div>

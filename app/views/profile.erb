<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h3>Surveys Taken:</h3>
      <ul>
        <% @taken_surveys.each do |survey| %>
          <li><%= survey.title %></li>
        <% end %>
      </ul>


      <h3>Your Surveys:</h3>
      <ul>
        <% @created_surveys.each do |survey| %>
          <li><a href="/survey/results/<%= survey.id %>"><%= survey.title %></a></li>
        <% end %>
      </ul>
      <form method='get' action="/survey/new">
        <button class="btn btn-default">Create a New Survey</button>
        <input  type='text' name='title' placeholder='Enter Survey Title Here'>
      </form>
    </div>

    <div class="col-lg-4">
      <h3>Surveys to Take:</h3>
      <ul>
        <% @untaken_surveys.each do |survey| %>
          <li><%= survey.title %></li>
          <a class="btn btn-default" href=<%= "/survey/#{survey.id}" %>>Start</a>
        <% end %>
      </ul>
    </div>
  </div>
</div>
